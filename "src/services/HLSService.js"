
import { HLS } from 'hls.js';
import Logger from '../services/Logger';

class HLSService {
  constructor() {
    this.hls = new HLS();
  }

  async loadHLS(url) {
    try {
      const stream = await this.hls.load(url);
      return stream;
    } catch (error) {
      Logger.error('Error loading HLS stream:', error);
      throw error;
    }
  }

  async play(stream) {
    try {
      stream.play();
    } catch (error) {
      Logger.error('Error playing HLS stream:', error);
      throw error;
    }
  }

  async stop(stream) {
    try {
      stream.stop();
    } catch (error) {
      Logger.error('Error stopping HLS stream:', error);
      throw error;
    }
  }
}

export default HLSService;
